<div class="media">
    <a class="pull-left" href="#">
        <img class="media-object" src="http://placehold.it/64x64" alt="">
    </a>
    <div class="media-body">
        <h4 class="media-heading"><%= comment.author.full_name %>
            <small><%= comment.created_at.strftime("%b %e, %Y %I:%M %p") %></small>
        </h4>
        <%= comment.body %>
    </div>
</div>
