<!-- Page Content -->
<div class="container">

  <div class="row">

        <!-- Title -->
        <h1><%= @post.title %></h1>

        <!-- Author -->
        <p class="lead">
            by <a href="#"><%= @post.author.full_name %></a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p><span class="glyphicon glyphicon-time"></span> Posted on <%= @post.created_at.strftime("%b %e, %Y %I:%M %p") %></p>

        <hr>

        <!-- Post Content -->
        <p class="lead"><%= @post.body %></p>

        <hr>

        <!-- Blog Comments -->

        <!-- Comments Form -->
        <%= render 'comments/new', post: @post %>

        <hr>

        <!-- Posted Comments -->
        <%= render @post.comments %>

  </div>
</div>

<%= link_to 'All Posts', posts_path %>

